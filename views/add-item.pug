extends layout

block content
    
    .container.centered

        h4(style="marrgin-bottom:20px") Add an item to inventory
        form(action="/shop/add-item" method="POST")
            .form-group
                input.form-control(name="name" placeholder="Item name")
            .form-group
                input.form-control(name="description" placeholder='Item detail')
            .form-group
                input.form-control(name="price" placeholder=" Price of item")
            .form-group
                input.form-control(name="category" placeholder="Category(Electronics, etc..")
            .form-group.text-center
                button.btn-btn-primary(type="submit") Add